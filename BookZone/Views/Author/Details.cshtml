@model BookZone.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row ">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>

    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a class="btn btn-primary" asp-controller="Book" asp-action="Index">Back to List</a>
    </div>


    @*<p> <h5>Name</h5> @Model.Name </p>
    <p> <h5>Address</h5> @Model.Address </p>*@

    <h5 class = "mt-2"> Books Written:</h5>

    @foreach (var item in Model.Books)
    {


        <div class="card m-3" style="width: 18rem;">
            <img src="~/img/book.png" class="card-img-top" alt="Book Cover Image">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Language</p>
            </div>
        </div>
    }
</div>

